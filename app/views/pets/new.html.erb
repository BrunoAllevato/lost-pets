<h1 class="mt-3">Add a new pet</h1>

<%= form_with model: @pet do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :type %>
    <%= f.text_field :type, class: 'form-control', placeholder: 'dog, cat, bird, fish, turtle, snake' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :found_at %>
    <%= f.date_field :found_at, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary mt-3', value: "Add Lost Pet" %>
<% end %>
