<h1 class="mt-3">Add a new pet</h1>

<%= form_with model: @pet do |f| %>
  <div class="row">
    <div class="form-group col-10">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group mt-3 col-2">
      <%= f.label :species %>
      <%= f.select :species, ['dog', 'cat', 'bird', 'fish', 'turtle', 'snake'] %>
    </div>
  </div>
  <div class="form-group mt-3">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :found_at %>
    <%= f.date_field :found_at, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-warning mt-3', value: "Add Lost Pet" %>
<% end %>

<%= link_to pets_path, class: 'btn btn-primary mt-3' do %>
  <i class="fa-solid fa-paw"></i>
  Back to Homepage
<% end %>
